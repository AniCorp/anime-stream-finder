{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "strict": true,
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "baseUrl": ".", 
	  "paths": {
		"#interfaces/*": ["src/interfaces/*"],
		"#utils/*": ["src/utils/*"],
		"#sources/*": ["src/sources/*"],
		"#services/*": ["src/services/*"],
		"#root/*": ["src/*"]
	  }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
  }
  